<p id="notice"><%= notice %></p>

<h1>Postts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Genre</th>
      <th>Noofpages</th>
      <th>Rating</th>
      <th>Canreadanyone</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postts.each do |postt| %>
      <tr>
        <td><%= postt.title %></td>
        <td><%= postt.genre %></td>
        <td><%= postt.noofpages %></td>
        <td><%= postt.rating %></td>
        <td><%= postt.canreadanyone %></td>
        <td><%= postt.description %></td>
        <td><%= link_to 'Show', postt %></td>
        <td><%= link_to 'Edit', edit_postt_path(postt) %></td>
        <td><%= link_to 'Destroy', postt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Postt', new_postt_path %>
