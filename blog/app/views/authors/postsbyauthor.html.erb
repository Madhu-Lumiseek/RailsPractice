<p id="notice"><%= notice %></p>

<h1>Posts by <%= params[:author_name] %></h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody><% @posts.each do |post| %>
      <tr>
        <td><%= post.author.name %></td>
        <td><%= post.title %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', authors_path %>