%p#notice= notice
.container
  %h1
    Posts by #{params[:author_name]}
  %table
    %thead
      %tr
        %th Name
        %th Title
        %th{:colspan => "3"}
    %tbody
      - @posts.each do |post|
        %tr
          %td= post.author.name
          %td= post.title
  %br/
  = link_to 'Back', authors_path
