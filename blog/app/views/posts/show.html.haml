%p#notice= notice
.container
  %p
    %strong Name:
    = @post.author&.name
  %p
    %strong Title:
    = @post.title
  %p
    %strong Genre:
    = @post.genre
  %p
    %strong Noofpages:
    = @post.noofpages
  %p
    %strong Description:
    = @post.description
  
  - @files.each do |postsattach|
    = image_tag postsattach.avatar.url
    %br/

  = link_to 'Edit', edit_post_path(@post)
  |
  = link_to 'Back', posts_path
