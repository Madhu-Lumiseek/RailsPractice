%p#notice= notice
.container
  %h1 Posts
.container
  %table
    %thead
      %tr
        %th Name
        %th Title
        %th Genre
        %th Noofpages
        %th Description
        %th{:colspan => "3"}
    %tbody
      - @posts.each do |post|
        %tr
          %td= post.author&.name
          %td= post.title
          %td= post.genre
          %td= post.noofpages
          %td= post.description
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Post', new_post_path
  |
  = link_to 'Authors listing page', authors_path
